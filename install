#!/usr/bin/env bash

init() {
    # Vars
    CURRENT_USERNAME='brennan'

    # Colors
    NORMAL=$(tput sgr0)
    WHITE=$(tput setaf 7)
    BLACK=$(tput setaf 0)
    RED=$(tput setaf 1)
    GREEN=$(tput setaf 2)
    YELLOW=$(tput setaf 3)
    BLUE=$(tput setaf 4)
    MAGENTA=$(tput setaf 5)
    CYAN=$(tput setaf 6)
    BRIGHT=$(tput bold)
    UNDERLINE=$(tput smul)
}

confirm() {
    echo -en "[${GREEN}y${NORMAL}/${RED}n${NORMAL}]: "
    read -n 1 -r
    echo
    if [[ ! $REPLY =~ ^[Yy]$ ]]; then
        exit 0
    fi
}

print_header() {
    # Added usage instructions for the new install-only option
    echo -E "$RED
      ! To make sure everything runs correctly DONT run as root ! $GREEN
                      -> '"./install.sh"' $NORMAL

    ${CYAN}Usage:${NORMAL}
      ./install.sh              (Full install and configuration)
      ./install.sh --install    (Only runs the install step)
      ./install.sh --config     (Only runs the configuration step)
    "
}

get_username() {
    echo -en "Enter your$GREEN username$NORMAL : $YELLOW"
    read username
    echo -en "$NORMAL"
    echo -en "Use$YELLOW "$username"$NORMAL as ${GREEN}username${NORMAL} ? "
    confirm
}

set_username() {
    sed -i -e "s/${CURRENT_USERNAME}/${username}/g" ./flake.nix
}

get_host() {
    echo -en "Choose a ${GREEN}host${NORMAL}, either [${YELLOW}D${NORMAL}]esktop or [${YELLOW}L${NORMAL}]aptop: "
    read -n 1 -r
    echo

    if [[ $REPLY =~ ^[Dd]$ ]]; then
        HOST='desktop'
    elif [[ $REPLY =~ ^[Ll]$ ]]; then
        HOST='laptop'
    else
        echo "Invalid choice. Please select either 'D' for desktop or 'L' for laptop."
        exit 1
    fi

    echo -en "$NORMAL"
    echo -en "Use the$YELLOW "$HOST"$NORMAL ${GREEN}host${NORMAL} ? "
    confirm
}

install_desktop() {
    echo -e "\n${RED}START INSTALL PHASE${NORMAL}\n"
    sleep 0.2

    # Get the hardware configuration
    echo -e "Copying ${MAGENTA}/etc/nixos/hardware-configuration.nix${NORMAL} to ${MAGENTA}./hosts/${HOST}/${NORMAL}\n"
    cp /etc/nixos/hardware-configuration.nix hosts/${HOST}/hardware-configuration.nix
    sleep 0.2

    # Build the system (flakes + home manager)
    echo -e "\nBuilding the system...\n"
    sudo nixos-rebuild switch --flake .#${HOST}
}

configure_desktop() {
    echo -e "\n${RED}START CONFIGURATION PHASE${NORMAL}\n"
    sleep 0.2

    # Create basic directories
    echo -e "Creating folders:"
    mkdir -p ~/.local/bin
    mkdir -p ~/Pictures/wallpapers
    mkdir -p ~/.config
    sleep 0.2

    echo -e "Linking ${MAGENTA}wallpapers${NORMAL}"
    # Note: This links the files inside the wallpapers dir, not the dir itself
    ln -sf "$PWD/configs/${HOST}/wallpapers/"* ~/Pictures/wallpapers/
    sleep 0.2

    echo -e "Linking ${MAGENTA}Xresources config${NORMAL}"
    ln -sf "$PWD/configs/${HOST}/Xresources" ~/.Xresources
    sleep 0.2

    echo -e "Linking all ${MAGenta}doom config${NORMAL}"
    ln -sf "$PWD/configs/common/doom" ~/.config/doom
    sleep 0.2

    echo -e "Linking ${MAGENTA}emacs config${NORMAL}"
    # Assuming this script is run from the repo root that contains 'configs/'
    ln -sf "$PWD/configs/common/emacs/init.el" "$PWD/configs/common/emacs/early-init.el" ~/.config/emacs/
    sleep 0.2

    # Conditionally link laptop-specific configs
    if [ "$HOST" = "laptop" ]; then
        echo -e "Linking ${MAGENTA}libinput gestures config${NORMAL} for laptop"
        ln -sf "$PWD/configs/laptop/libinput-gestures.conf" ~/.config/libinput-gestures.conf
        sleep 0.2
    fi
}

reboot() {
    echo -en "Would you like to reboot now "
    confirm
    sudo reboot now
}

main() {
    init
    print_header

    # Check the first command-line argument for mode selection
    if [[ "$1" == "--config" || "$1" == "-c" ]]; then
        echo -e "${YELLOW}Running in configuration-only mode...${NORMAL}"
        get_host
        configure_desktop
        echo -e "\n${GREEN}Configuration complete.${NORMAL}"
        exit 0
    elif [[ "$1" == "--install" || "$1" == "-i" ]]; then
        echo -e "${YELLOW}Running in install-only mode...${NORMAL}"
        get_username
        set_username
        get_host
        install_desktop
        reboot
        exit 0
    fi

    # Default: full installation and configuration flow
    echo -e "${YELLOW}Running in default (full install) mode...${NORMAL}"
    get_username
    set_username
    get_host
    install_desktop
    configure_desktop
    reboot
}

# Pass all script arguments to the main function
main "$@" && exit 0
